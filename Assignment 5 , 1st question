#include <iostream>
#include <string>

using namespace std;

int main() {
    string word;
    cout << "Enter a word: ";
    cin >> word;

    string reversed_word = "";

    for(int i = word.length()-1; i >= 0; i--) {
        reversed_word += word[i];
    }

    cout << "Reverse String: " << reversed_word << endl;

    return 0;
}
